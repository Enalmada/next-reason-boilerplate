{
  "name": "next-reason-boilerplate",
  "sources": [
    {
      "dir": "components",
      "subdirs": true
    },
    {
      "dir": "pages",
      "subdirs": true
    },
    {
      "dir": "bindings",
      "subdirs": true
    }
  ],
  "bs-dependencies": [
    "reason-react",  "reason-apollo", "bs-ant-design-alt"
  ],
  "ppx-flags": ["graphql_ppx/ppx"],
